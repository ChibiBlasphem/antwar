{
  "private": true,
  "name": "antwar-monorepo",
  "version": "1.0.0",
  "description": "A static site engine built with React and Webpack",
  "scripts": {
    "build": "lerna run build",
    "init": "npm install && lerna bootstrap && npm run build",
    "test": "tape packages/*/test/*.js",
    "test:lint": "eslint . --ext .js --ext .jsx --cache",
    "watch": "npm-watch",
    "gh-pages:build-and-deploy": "npm run gh-pages:build && npm run gh-pages:deploy",
    "gh-pages:build": "webpack",
    "gh-pages:deploy": "gh-pages -d gh-pages",
    "gh-pages:stats": "webpack --json --profile > stats.json",
    "start": "cd smoketest && npm start",
    "site": "cd site && npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antwarjs/antwar.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "webpack",
    "static",
    "site",
    "generator",
    "blog",
    "blogging"
  ],
  "author": "Juho Vepsalainen <bebraw@gmail.com> (http://github.com/bebraw)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antwarjs/antwar/issues"
  },
  "homepage": "http://antwar.js.org/",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.2",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "git-prepush-hook": "^1.0.2",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.38",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "npm-watch": "^0.1.8",
    "preact": "^7.2.0",
    "preact-compat": "^3.13.1",
    "prism-languages": "^0.3.3",
    "prismjs": "^1.6.0",
    "raw-loader": "^0.5.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "style-loader": "^0.13.2",
    "tape": "^4.6.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^3.0.0",
    "yaml-frontmatter-loader": "0.0.3"
  },
  "pre-push": [
    "test:lint",
    "test"
  ],
  "watch": {
    "build": {
      "patterns": [
        "packages/**/*.{js,jsx}"
      ],
      "ignore": "packages/*/dist/*.js"
    },
    "test": {
      "patterns": [
        "packages/**/*.js"
      ],
      "ignore": "packages/*/dist/*.js"
    },
    "test:lint": {
      "patterns": [
        "{packages,site}/**/*.{js,jsx}"
      ],
      "ignore": "packages/*/dist/*.js"
    }
  }
}
