{
  "private": true,
  "name": "antwar-monorepo",
  "version": "1.0.0",
  "description": "A static site engine built with React and webpack",
  "scripts": {
    "build": "lerna run build",
    "build:watch": "npm-watch",
    "init": "npm install && lerna bootstrap && npm run build",
    "test:watch": "jest --watch",
    "test": "jest",
    "test:lint": "eslint . --ext .js --ext .jsx --cache",
    "gh-pages:build-and-deploy": "npm run gh-pages:build && npm run gh-pages:deploy",
    "gh-pages:build": "webpack",
    "gh-pages:deploy": "gh-pages -d gh-pages",
    "gh-pages:stats": "webpack --json --profile > stats.json",
    "publish": "lerna publish",
    "postpublish": "cd site && npm run build && npm run deploy",
    "start": "cd smoketest && npm start",
    "site": "cd site && npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antwarjs/antwar.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "webpack",
    "static",
    "site",
    "generator",
    "blog",
    "blogging"
  ],
  "author": "Juho Vepsalainen <bebraw@gmail.com> (http://github.com/bebraw)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antwarjs/antwar/issues"
  },
  "homepage": "http://antwar.js.org/",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "front-matter": "^2.1.2",
    "git-prepush-hook": "^1.0.2",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-rc.5",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "marksy": "^4.0.0",
    "npm-watch": "^0.2.0",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "prism-languages": "^0.3.3",
    "prismjs": "^1.6.0",
    "prop-types": "^15.5.10",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "remove-markdown": "^0.2.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-merge": "^4.1.0",
    "yaml-frontmatter-loader": "^0.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "pre-push": [
    "test:lint",
    "test"
  ],
  "watch": {
    "build": {
      "patterns": [
        "packages/**/*.{js,jsx}"
      ],
      "ignore": "packages/*/dist/*.js"
    }
  }
}
